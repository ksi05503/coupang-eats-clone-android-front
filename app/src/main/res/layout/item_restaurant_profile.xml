<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/item_image_view_restaurant_image"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="10dp"
        tools:srcCompat="@tools:sample/avatars" />
    <TextView
        android:id="@+id/item_text_restaurant_name"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="식당 이름"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">
        <ImageView
            android:id="@+id/item_image_view_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_star_24"/>
        <TextView
            android:id="@+id/item_text_restaurant_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.8"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="1dp"/>
        <TextView
            android:id="@+id/item_text_restaurant_review_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(12)"
            android:textColor="@color/black"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/item_text_restaurant_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="0.41km"
            android:textColor="@color/black"
            android:textSize="12dp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/item_text_restaurant_charge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:text="무료배달"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:layout_marginBottom="7dp"/>


</LinearLayout>